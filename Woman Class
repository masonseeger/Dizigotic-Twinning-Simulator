	public FileDriver dubO = new FileDriver();
	public Woman()
			{
			age = 180;
			pSOvu = 1;
			pDOvu = 0;
			pLb = 0; //need values from bio squad
			pSb = 1-pLb;
			ageOfMeno = 600;
